<h2>Edit Movie</h2>

<form action="/movies/{{movie._id}}/edit" method="post">

    <label for="title">title: </label>
    <input type="text" name="title" value="{{movie.title}}">

    <label for="genre">Genre: </label>
    <input type="text" name="genre" value="{{movie.genre}}">

    <label for="plot">plot: </label>
    <input type="text" name="plot" value="{{movie.plot}}">
    <br>
    <label for="cast">Cast: </label>
    <br>
    <select name="cast" multiple="true">
        {{#each celebrities}}
            <option value="{{this._id}}" selected="true"> {{this.name}}</option>
        {{/each}}
    </select>

    <button>Edit Movie</button>

</form>